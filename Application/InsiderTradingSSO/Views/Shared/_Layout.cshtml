<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="header">
        <div class="Applogo">
            <img alt="Application Logo" src="~/Content/Images/Logo/Viligante_Logo.png" style="height:50px;"/>
        </div> 
        <div style="float:right;padding:25px 50px 10px 0px;">
            <label style="color:white"> @User.Identity.Name</label>
        </div>      
    </div>
    <div style="min-height: 530px; text-align: center;">
        @RenderBody()
        @RenderSection("scripts", required: false)
    </div>
    <div class="footerMsg">
        <span>This site is best viewed in Internet Explorer 10 and above, Google Chrome, Mozilla Firefox and Apple Safari.</span>
    </div>
    @Scripts.Render("~/bundles/jquery")
</body>
</html>
