@model InsiderTrading.Models.ComCodeModel

@{
    ViewBag.Title = InsiderTrading.Common.Common.getResource("mst_ttl_10043");
}
<section class="content-header">
    <h1>
        @InsiderTrading.Common.Common.getResource("mst_ttl_10043")
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body search" gridtype="@ViewBag.GridType">                    
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    @Html.Label("Code Group Type", new { @class = "control-label" })                                 
                                    @Html.DropDownListFor(model => model.CodeGroupId, new SelectList(ViewBag.CodeGroupDropDown, "Key", "Value", ""), new { @class = "form-control", id = "ddlCodeGroupId"})                                                                   
                                    @Html.Hidden("1", null, new { @id = "1", gridtype = ViewBag.GridType }) 
                                    @Html.Hidden("2", null, new { @id = "2", gridtype = ViewBag.GridType })                                   
                                </div>
                            </div>
                    </div>
                    <div id="divParentCodeName" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                    </div>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

    
   
    @Html.Hidden("pcid", (object)ViewBag.pcid, new { @id = "pcid", gridtype = ViewBag.GridType}) 
    @Html.HiddenFor(model => model.CodeGroupId)
    @Html.HiddenFor(model => model.ParentCodeId)
    <input type="hidden" id="CalledFrom" value='@ViewBag.CalledFrom'/>
    @*<input type="hidden" id="pcid" value='@ViewBag.pcid' />*@   
    @Html.Hidden("SCDetails", null, new { @id = "SCDetails", gridtype = ViewBag.GridType })
    <div id="DivGridTable" class="col-xs-12 form-group row ">
   
    </div>


</section>

    @Scripts.Render("~/bundles/ComCode")

    @Html.Hidden("v_acid", @InsiderTrading.Common.ConstEnum.UserActions.OTHERMASTER_COMCODE_VIEW)
    @Html.Hidden("c_acid", @InsiderTrading.Common.ConstEnum.UserActions.OTHERMASTER_COMCODE_CREATE)

    @Html.Hidden("PopulateComboOnChange", Url.Action("PopulateCombo_OnChange", "ComCode"))
    @Html.Hidden("gridTable", Url.Action("ListPage", "ComCode"))
    @Html.Hidden("ComCodeCrete", Url.Action("Create", "ComCode"))   
    @Html.Hidden("ParentPopulateComboOnChange", Url.Action("ParentPopulateCombo_OnChange", "ComCode"))
