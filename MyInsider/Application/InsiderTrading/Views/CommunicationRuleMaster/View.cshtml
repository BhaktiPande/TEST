<section class="content search" gridtype="@ViewBag.GridType">
    @Html.ValidationSummary("", new Dictionary<string, object> { { "class", "alert alert-danger" }, { "id", "divValidationSummaryModal" } })
    <button type="button" data-toggle="collapse" class="btn btn-success" data-target="#filter-panel">
        <i class="fa fa-search"></i> @InsiderTrading.Common.Common.getResource("com_btn_14005")
    </button>
    <form method="post">
    <div id="filter-panel" class="collapse filter-panel">
        <br />
        <div class="col-lg-12">
            <div class="panel panel-default ">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.RuleName)
                                @Html.TextBoxFor(m => m.RuleName, new { @class = "form-control", gridtype = @ViewBag.GridType, id = "1" })
                                @Html.ValidationMessageFor(m => m.RuleName)
                            </div>
                        </div>
                        <!-- /.col-lg-3  -->
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.RuleCategoryCodeId)
                                @Html.DropDownListFor(m => m.RuleCategoryCodeId, new SelectList(ViewBag.RuleCategoryCodeId, "Key", "Value", ""), new { @class = "form-control", gridtype = @ViewBag.GridType, id = "2" })
                            </div>
                        </div>
                        <!-- /.col-lg-3  -->
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.RuleStatusCodeId)
                                @Html.DropDownListFor(m => m.RuleStatusCodeId, new SelectList(ViewBag.RuleStatusCodeId, "Key", "Value", ""), new { @class = "form-control", gridtype = @ViewBag.GridType, id = "3" })

                                <input type="hidden" value="@ViewBag.UserId" id="4" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <button type="button" id="btnSearch" class="btn btn-success"><i class="fa fa-search"></i> @InsiderTrading.Common.Common.getResource("com_btn_14005")</button>
                            <button type="button" dt_name="btnReset" dt_gridtype="@ViewBag.GridType" class="btn btn-success"><i class="fa fa-undo"></i>@InsiderTrading.Common.Common.getResource("com_btn_14006")</button>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    </form>
    @*<hr>*@
    <div class="div-spacer"></div><br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @{
                if (InsiderTrading.Common.Common.CanPerform(InsiderTrading.Common.ConstEnum.UserActions.COMMUNICATION_RULES_ADD_RIGHT))
                {
                <p>
                    <a href='@Url.Action("Create", "CommunicationRuleMaster", new { acid = InsiderTrading.Common.ConstEnum.UserActions.COMMUNICATION_RULES_ADD_RIGHT, RuleId = 0 })'><button type="submit" class="btn btn-success"><i class="fa fa-plus-square"></i> @InsiderTrading.Common.Common.getResource("cmu_btn_18032")</button></a>
                </p>
                }
            }
        </div>
    </div>

    <div class="col-xs-12 row">
        @{Html.RenderAction("Index", "DatatableGrid", new { acid = InsiderTrading.Common.ConstEnum.UserActions.COMMUNICATION_RULES_LIST_RIGHT, type = @ViewBag.GridType, btnSearch = "btnSearch", sSortCol = "0" });}
        @{
            if (InsiderTrading.Common.Common.CanPerform(InsiderTrading.Common.ConstEnum.UserActions.COMMUNICATION_RULES_EDIT_RIGHT))
            {
                @Html.Hidden("Edit", Url.Action("Create", "CommunicationRuleMaster", new { acid = InsiderTrading.Common.ConstEnum.UserActions.COMMUNICATION_RULES_EDIT_RIGHT }), new { @class = "gridtypecontrol", ctrtype = "link", gridcolumntype = @ViewBag.GridType + "_usr_grd_11073", param = "{'text':'','href':'" + Url.Action("Create", "CommunicationRuleMaster", new { acid = InsiderTrading.Common.ConstEnum.UserActions.COMMUNICATION_RULES_EDIT_RIGHT }) + "&RuleId=<RuleId>','class':'display-icon icon icon-edit'}" })

            }
            else if (InsiderTrading.Common.Common.CanPerform(InsiderTrading.Common.ConstEnum.UserActions.COMMUNICATION_RULES_PERSONALIZE_RIGHT))
            {
                @Html.Hidden("Edit", Url.Action("Create", "CommunicationRuleMaster", new { acid = InsiderTrading.Common.ConstEnum.UserActions.COMMUNICATION_RULES_PERSONALIZE_RIGHT }), new { @class = "gridtypecontrol", ctrtype = "link", gridcolumntype = @ViewBag.GridType + "_usr_grd_11073", param = "{'text':'','href':'" + Url.Action("Create", "CommunicationRuleMaster", new { acid = InsiderTrading.Common.ConstEnum.UserActions.COMMUNICATION_RULES_PERSONALIZE_RIGHT }) + "&RuleId=<RuleId>','class':'display-icon icon icon-edit'}" })

            }
        }

       
        <div class="div-spacer"></div><br /><br /><br /><br />

        <div class="div-spacer"></div>
    </div>
</section>




