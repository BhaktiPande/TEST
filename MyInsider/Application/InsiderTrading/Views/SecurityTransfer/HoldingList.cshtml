@model InsiderTrading.Models.SecurityTransferSearchViewModel
@{
    //@InsiderTrading.Common.Common.getResource("cmu_ttl_18030")
    ViewBag.Title = @InsiderTrading.Common.Common.getResource("usr_ttl_11489");
    ViewBag.GridType = InsiderTrading.Common.ConstEnum.GridType.SecuritiesHoldingList;
}

<section class="content-header">
    <h1> @ViewBag.Title</h1>
</section>

<section class="content search" gridtype="@ViewBag.GridType">
    @Html.ValidationSummary("", new Dictionary<string, object> { { "class", "alert alert-danger" }, { "id", "divValidationSummaryModal" } })

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
<p>
    <button type="button" data-toggle="collapse" class="btn btn-success" data-target="#filter-panel">
        <i class="fa fa-search"> @InsiderTrading.Common.Common.getResource("com_btn_14005")</i>
    </button>
    @{
        if (InsiderTrading.Common.Common.CanPerform(InsiderTrading.Common.ConstEnum.UserActions.Security_Transfer_Transfer_View))
        {

            <a class="btn btn-success" href='@Url.Action("Transfer", "SecurityTransfer", new { acid = InsiderTrading.Common.ConstEnum.UserActions.Security_Transfer_Transfer_View })' role="button" title=""><i class="glyphicon glyphicon-transfer"></i> @InsiderTrading.Common.Common.getResource("usr_btn_11487")</a>

        }
        if (InsiderTrading.Common.Common.CanPerform(InsiderTrading.Common.ConstEnum.UserActions.Security_Transfer_Insider_Report))
        {
                        <a class="btn btn-success" href='@Url.Action("TransferReport", "Reports", new { acid = InsiderTrading.Common.ConstEnum.UserActions.Security_Transfer_Insider_Report })' role="button" title=""><i class="fa fa-list-alt"></i> @InsiderTrading.Common.Common.getResource("usr_btn_11488")</a>

                }
            }
    </p>
        </div>
    </div>
    <form method="post">
    <div id="filter-panel" class="collapse filter-panel">
        <br />
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="form-group">
                                @Html.Label(InsiderTrading.Common.Common.getResource("usr_lbl_11490"))
                                @Html.DropDownList("HoldingFor", new MultiSelectList(ViewBag.HoldingForList, "Key", "Value", ""), new { @class = "form-control selectpicker", title = "Select", multiple = "multiple", gridtype = @ViewBag.GridType, id = "2" })


                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">

                            <div class="form-group">
                                @Html.Label(InsiderTrading.Common.Common.getResource("usr_lbl_11491"))
                                @Html.DropDownList("SecurityTypeList", new MultiSelectList(ViewBag.SecurityTypeList, "Key", "Value", ""), new { @class = "form-control selectpicker", title = "Select", multiple = "multiple", gridtype = @ViewBag.GridType, id = "4" })
                                @*@Html.TextBox("PolicyName", null, new { @class = "form-control", gridtype = @ViewBag.GridType, id = "1" })*@
                            </div>

                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">

                            <div class="form-group">
                                @Html.Label(InsiderTrading.Common.Common.getResource("usr_lbl_11492"))
                                @Html.TextBoxFor(m => m.DematAccountNumber, new { @class = "form-control " , gridtype = @ViewBag.GridType, id = "5" })
                                @Html.ValidationMessageFor(m => m.DematAccountNumber)
                            </div>

                        </div>
                    </div>
                    <div class="row">
                       
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <form role="form">
                               
                                <button type="button" id="btnSearch" class="btn btn-success"><i class="fa fa-search"></i> @InsiderTrading.Common.Common.getResource("com_btn_14005")</button>
                                <button type="button" class="btn btn-success" id="btnReset" dt_name="btnReset" dt_gridtype="@ViewBag.GridType"><i class="fa fa-undo"></i> @InsiderTrading.Common.Common.getResource("com_btn_14006")</button>
                            </form>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    </form>
    <div class="col-xs-12 row">
        @{Html.RenderAction("Index", "DatatableGrid", new { acid = InsiderTrading.Common.ConstEnum.UserActions.Security_Transfer_Holding_List, type = @ViewBag.GridType, btnSearch = "btnSearch", sSortCol = "0" });}
       
        <input type="hidden" value="@ViewBag.UserInfoId" id="1" name="" gridtype="@ViewBag.GridType" />

        <div class="div-spacer"></div><br /><br /><br /><br />

        <div class="div-spacer"></div>
    </div>
</section>

