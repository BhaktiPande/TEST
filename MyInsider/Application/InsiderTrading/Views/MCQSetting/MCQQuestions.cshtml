                Answer_Type: $("#Answer_Type").val(),
                Question: $("#Question").val()
            }
            var count = 1;

            $("#tblOptions tr:not(:first)").each(function () {
           
                var row = $(this);
                var item = {

                    QuestionsAnswer: $(this).find("td:eq(0) input[type='text']").val(),//$('input:text:eq(0)', row).val(),
