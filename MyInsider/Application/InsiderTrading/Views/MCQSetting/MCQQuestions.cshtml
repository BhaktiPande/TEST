                        window.location.href = '@Url.Action("MCQQuestions", "MCQSetting")';
                        showMessage(r.Message['success'], r.status)
                        if (r.AddOnemoreQuestion)
                        {
                            $("#divQuestionDetailsModal").show();
                            $("#QuestionList").hide();
                        }
                    }
                    else
                    {
                     
                        DisplayErrorMessage(r.Message['Error'] );

