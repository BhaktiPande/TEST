@model InsiderTrading.Models.CompanyModelSearchViewModel
@{
    ViewBag.Title = InsiderTrading.Common.Common.getResource("cmp_ttl_13086");
}
<section class="content-header">        
    @Html.ValidationSummary("", new Dictionary<string, object> { { "class", "alert alert-danger" }, { "id", "divValidationSummaryModal" } })
    <h1>
        @InsiderTrading.Common.Common.getResource("cmp_ttl_13086")
    </h1>
</section>
<section class="content  search" gridtype="@ViewBag.GridType">
    <input type="hidden" value="@ViewBag.Param1" gridtype="@ViewBag.GridType" />
    <button type="button" data-toggle="collapse" class="btn btn-success" data-target="#filter-panel">
        <i class="fa fa-search"></i> @InsiderTrading.Common.Common.getResource("com_btn_14005")
    </button>
    <form method="post">
    <div id="filter-panel" class="collapse filter-panel">
        <br />
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">

                            <div class="form-group">
                                @Html.LabelFor(m => m.CompanyName)
                                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", gridtype = @ViewBag.GridType, id = "1" })
                                @Html.ValidationMessageFor(model => model.CompanyName)
                            </div>

                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Address)
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", gridtype = @ViewBag.GridType, id = "2" })
                                @Html.ValidationMessageFor(model => model.Address)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <button type="button" class="btn btn-success" id="btnSearch"><i class="fa fa-search"></i> @InsiderTrading.Common.Common.getResource("com_btn_14005")</button>
                            <button type="button" class="btn btn-success" id="btnReset" dt_name="btnReset" dt_gridtype="@ViewBag.GridType"><i class="fa fa-undo"></i> @InsiderTrading.Common.Common.getResource("com_btn_14006")</button>

                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    </form>
    <div class="div-spacer"></div><br />
@if (InsiderTrading.Common.Common.CanPerform(InsiderTrading.Common.ConstEnum.UserActions.COMPANY_CREATE))
{
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p>
                <a class="btn btn-success" href='@Url.Action("Create", "Company", new { CompanyId = 0, acid = InsiderTrading.Common.ConstEnum.UserActions.COMPANY_CREATE })'><i class="fa fa-plus-square"></i> @InsiderTrading.Common.Common.getResource("cmp_btn_13085")</a>
            </p>
        </div>
    </div>
}
    <div class="div-spacer"></div><br />

    @{Html.RenderAction("Index", "DatatableGrid", new { type = @ViewBag.GridType, btnSearch = "btnSearch", sSortCol = "0", acid = InsiderTrading.Common.ConstEnum.UserActions.COMPANY_VIEW });}
    <div class="div-spacer"></div>
</section><!-- /.content -->

    @Scripts.Render("~/bundles/Company")
@Scripts.Render("~/bundles/JqueryConfirm")
